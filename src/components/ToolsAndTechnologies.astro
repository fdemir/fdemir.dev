---
import Section from "./Section.astro"
import { Image } from '@astrojs/image/components';

const Skills = [
  {
    image: '/img/typescript.png',
    name: 'TypeScript',
  },
  {
    image: '/img/javascript.png',
    name: 'JavaScript',
  },
  {
    image: '/img/react.png',
    name: 'React',
  },
  {
    image: '/img/next.svg',
    name: 'Next.js',
  },
  {
    image: '/img/cypress.png',
    name: 'Cypress',
  },
  {
    image: '/img/openlayers.svg',
    name: 'Openlayers',
  },
  {
    image: '/img/leaflet.png',
    name: 'Leaflet',
  },
  {
    image: '/img/sass.png',
    name: 'Sass',
  },
  {
    image: '/img/html5.png',
    name: 'HTML5',
  },
  {
    image: '/img/nodejs.png',
    name: 'Node.js',
  },
  {
    image: '/img/tailwindcss.png',
    name: 'Tailwindcss',
  },
  {
    image: '/img/figma.png',
    name: 'Figma',
  }
]

---

<Section title="Tools & Technologies">
  <div class="skills-row">
    {Skills.map((skill) => (
      <div class="item">
        <Image src={skill.image} alt={skill.name} width={24} height={24} />
        <span>{skill.name}</span>
      </div>
    ))}
  </div>
</Section>

<style>
  .skills-row {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 6px;
  }

  .item {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: start;
    border: 1px solid #ccc;
    border-radius: 0.5rem;
    margin: 0.5rem;
    color: var(--color-secondary);
    height: 62px;
    user-select: none;
  }

  .item:hover {
    border: 1px solid var(--color-primary);
  }

  .item img {
    margin: 0 14px;
  }
</style>