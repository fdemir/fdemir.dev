    url?: string
    from?: string
    to?: string
    title: string
    description: string
  }
  const { data } = Astro.props
---

<div>
  <h4>
    {
      data.url 
      ?
        <a href={data?.url || ""} target="_blank">
          {data.title}
        </a> 
      : 
      data.title
    }
