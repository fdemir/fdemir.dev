---
import { Project } from "./Projects.astro";

  const {data} = Astro.props
---

<div>
  <div class="project-item">
    <img src={data.image} width="260" height="260" alt="">
    <h3>
      {data.title}
    </h3>
    <p>{data.description}</p>
  </div>
</div>

<style>
  .project-item {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .project-item img {
    border-radius: 10px;
    max-width: 100%;
  }

  .project-item h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 1rem;
    margin: 0;
  }

  .project-item p {
    margin: 0;
    color: rgba(223,223,223,.8);
    font-size: .85rem;
  }

</style>